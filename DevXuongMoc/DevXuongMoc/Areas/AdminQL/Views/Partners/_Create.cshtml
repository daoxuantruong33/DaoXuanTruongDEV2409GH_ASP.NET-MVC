@model DevXuongMoc.Models.Partner

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-lg">
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="row">
                        <h class="display-8 text-center mt-4" style="font-size:28px; margin-bottom:2rem;">Tạo Đối Tác</h>
                    


                    <div class="col-md-6">
                            <div class="from-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                            <div class="from-group">
                            <label asp-for="Url" class="control-label"></label>
                            <input asp-for="Url" class="form-control" />
                            <span asp-validation-for="Url" class="text-danger"></span>
                        </div>
                            <div class="from-group">
                            <label asp-for="Logo" class="control-label"></label>
                            <input asp-for="Logo" type="file" class="form-control" />
                            <span asp-validation-for="Logo" class="text-danger"></span>
                        </div>
                    </div>


                        <div class="col-md-6">
                            <div class="from-group">
                            <label asp-for="AdminCreated" class="control-label"></label>
                            <input asp-for="AdminCreated" class="form-control" />
                            <span asp-validation-for="AdminCreated" class="text-danger"></span>
                        </div>
                            <div class="from-group">
                            <label asp-for="AdminUpdated" class="control-label"></label>
                            <input asp-for="AdminUpdated" class="form-control" />
                            <span asp-validation-for="AdminUpdated" class="text-danger"></span>
                        </div>
                            <div class="from-group">
                            <label asp-for="Content" class="control-label"></label>
                            <input asp-for="Content" class="form-control" />
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                    </div>
                  
                    <!-- Nút Gửi -->
                    <div class="from-group text-center">
                        <button type="submit" class="btn btn-info btn-lg px-4 mt-3">Tạo mới</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg px-4 mt-3">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

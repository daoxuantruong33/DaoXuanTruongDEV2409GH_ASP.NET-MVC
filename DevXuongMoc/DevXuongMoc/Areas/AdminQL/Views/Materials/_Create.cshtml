@model DevXuongMoc.Models.Material

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-lg">
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <h class="display-8 text-center mt-4" style="font-size:28px; margin-bottom:2rem;">Tạo Mới Vật Liệu</h>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Title" class="control-label"></label>
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Icon" class="control-label"></label>
                                    <input asp-for="Icon" type="file" class="form-control" />
                                    <span asp-validation-for="Icon" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="MetaTitle" class="control-label"></label>
                                    <input asp-for="MetaTitle" class="form-control" />
                                    <span asp-validation-for="MetaTitle" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="MetaKeyword" class="control-label"></label>
                                    <input asp-for="MetaKeyword" class="form-control" />
                                    <span asp-validation-for="MetaKeyword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="MetaDescription" class="control-label"></label>
                                    <input asp-for="MetaDescription" class="form-control" />
                                    <span asp-validation-for="MetaDescription" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Slug" class="control-label"></label>
                                    <input asp-for="Slug" class="form-control" />
                                    <span asp-validation-for="Slug" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Orders" class="control-label"></label>
                                    <input asp-for="Orders" class="form-control" />
                                    <span asp-validation-for="Orders" class="text-danger"></span>
                                </div>
                               
                               

                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Parentid" class="control-label"></label>
                                    <input asp-for="Parentid" class="form-control" />
                                    <span asp-validation-for="Parentid" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CreatedDate" class="control-label"></label>
                                    <input asp-for="CreatedDate" class="form-control" />
                                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UpdatedDate" class="control-label"></label>
                                    <input asp-for="UpdatedDate" class="form-control" />
                                    <span asp-validation-for="UpdatedDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AdminCreated" class="control-label"></label>
                                    <input asp-for="AdminCreated" class="form-control" />
                                    <span asp-validation-for="AdminCreated" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AdminUpdated" class="control-label"></label>
                                    <input asp-for="AdminUpdated" class="form-control" />
                                    <span asp-validation-for="AdminUpdated" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Notes" class="control-label"></label>
                                    <input asp-for="Notes" class="form-control" />
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Status" class="control-label"></label>
                                    <input asp-for="Status" class="form-control" />
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Isdelete" class="control-label"></label>
                                    <input asp-for="Isdelete" class="form-control" />
                                    <span asp-validation-for="Isdelete" class="text-danger"></span>
                                </div>
                          
                            </div>
                    </div>


                    <!-- Nút Gửi -->
                    <div class="from-group text-center">
                        <button type="submit" class="btn btn-info btn-lg px-4 mt-3">Tạo mới</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg px-4 mt-3">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

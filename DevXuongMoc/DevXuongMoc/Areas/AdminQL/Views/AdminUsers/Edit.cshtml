@model DevXuongMoc.Models.AdminUser

@{
    ViewData["Title"] = "Chỉnh sửa tài khoản quản trị";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-4 fw-bold">Chỉnh sửa tài khoản quản trị</h1>
        <p class="lead text-muted">Cập nhật thông tin tài khoản quản trị một cách dễ dàng.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white text-center">
                    <h3 class="mb-0">Thông tin tài khoản</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Account" class="form-label">Tài khoản</label>
                                <input asp-for="Account" class="form-control shadow-sm" placeholder="Nhập tên tài khoản" />
                                <span asp-validation-for="Account" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label">Mật khẩu</label>
                                <input asp-for="Password" type="password" class="form-control shadow-sm" placeholder="Nhập mật khẩu" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Họ và tên</label>
                                <input asp-for="Name" class="form-control shadow-sm" placeholder="Nhập họ và tên" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label">Số điện thoại</label>
                                <input asp-for="Phone" type="tel" class="form-control shadow-sm" placeholder="Nhập số điện thoại" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" type="email" class="form-control shadow-sm" placeholder="Nhập email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Avatar" class="form-label">Ảnh đại diện (URL)</label>
                                <input asp-for="Avatar" type="file" class="form-control shadow-sm" placeholder="Nhập URL ảnh đại diện" />
                                <span asp-validation-for="Avatar" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="IdPhongBan" class="form-label">ID Phòng ban</label>
                                <input asp-for="IdPhongBan" class="form-control shadow-sm" placeholder="Nhập ID phòng ban" />
                                <span asp-validation-for="IdPhongBan" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="NgayCapNhat" class="form-label">Ngày cập nhật</label>
                                <input asp-for="NgayCapNhat" type="date" class="form-control shadow-sm" />
                                <span asp-validation-for="NgayCapNhat" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IsAdmin" class="form-label">Quyền quản trị</label>
                            <select asp-for="IsAdmin" class="form-select shadow-sm">
                                <option value="true">Có</option>
                                <option value="false">Không</option>
                            </select>
                            <span asp-validation-for="IsAdmin" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg shadow-lg px-4 me-3">Lưu thay đổi</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg shadow-lg px-4">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

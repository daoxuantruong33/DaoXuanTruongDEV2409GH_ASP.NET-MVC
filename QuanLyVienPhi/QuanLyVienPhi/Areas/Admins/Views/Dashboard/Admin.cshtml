@{
    ViewData["Title"] = "Thống kê";
    Layout = "~/Areas/Admins/Views/Shared/Admin.cshtml";
}

<style>
    .small-box {
        border-radius: 20px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        position: relative;
        overflow: hidden;
    }

        .small-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        }

        .small-box .icon {
            font-size: 60px;
            opacity: 0.9;
            position: absolute;
            top: 20px;
            right: 20px;
            transition: transform 0.3s;
        }

        .small-box:hover .icon {
            transform: rotate(10deg) scale(1.1);
        }

    .small-box-footer {
        font-weight: bold;
        text-transform: uppercase;
        background: rgba(255, 255, 255, 0.2);
        padding: 10px;
        border-radius: 10px;
        transition: background 0.3s;
    }

        .small-box-footer:hover {
            background: rgba(255, 255, 255, 0.4);
        }
</style>

<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
        <div class="small-box bg-gradient-info text-white p-4">
            <div class="d-flex flex-column">
                <h3>150</h3>
                <p>Sản phẩm</p>
            </div>
            <i class="fas fa-box icon"></i>
            <a href="#" class="small-box-footer text-white">Chi tiết <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
        <div class="small-box bg-gradient-success text-white p-4">
            <div class="d-flex flex-column">
                <h3>53</h3>
                <p>Bài viết tin tức</p>
            </div>
            <i class="fas fa-newspaper icon"></i>
            <a href="#" class="small-box-footer text-white">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
        <div class="small-box bg-gradient-warning text-white p-4">
            <div class="d-flex flex-column">
                <h3>44</h3>
                <p>Người dùng</p>
            </div>
            <i class="fas fa-users icon"></i>
            <a href="#" class="small-box-footer text-white">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
        <div class="small-box bg-gradient-danger text-white p-4">
            <div class="d-flex flex-column">
                <h3>65</h3>
                <p>Liên hệ</p>
            </div>
            <i class="fas fa-envelope icon"></i>
            <a href="#" class="small-box-footer text-white">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>
@model QuanLyVienPhi.Models.BenhNhan

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admins/Views/Shared/Admin.cshtml";
}
<link rel="stylesheet" href="~/css/Details.css" />

<h1>Chi Tiết</h1>
<hr />
<div>
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HoTen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NgaySinh)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GioiTinh)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiaChi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DienThoai)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DienThoai)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cccd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cccd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NgayNhapVien)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayNhapVien)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NgayRaVien)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayRaVien)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BacSi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BacSi.HoTen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Khoa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Khoa.TenKhoa)
        </dd>
        <dt class="col-sm-2">
            Phòng
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.ChiTietPhongs)
            {
                <p>@item.Phong.SoPhong</p> <!-- Hiển thị số phòng -->
            }
        </dd>
        <dt class="col-sm-2">
            Giường gần nhất
        </dt>
        <dd class="col-sm-10">
            @(ViewBag.GiuongMoiNhat != null ? ViewBag.GiuongMoiNhat.SoGiuong : "Chưa có")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrangThaiThanhToan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrangThaiThanhToan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
    </dl>
    <div class="button-group">
        <a asp-action="Edit" asp-route-id="@Model?.BenhNhanId" class="btn btn-primary">Sửa</a>
        <a asp-action="Index" class="back-button">Quay lại</a>
    </div>
</div>

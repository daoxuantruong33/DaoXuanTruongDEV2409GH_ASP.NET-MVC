@model QuanLyVienPhi.Models.Khoa

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admins/Views/Shared/Admin.cshtml";
}

<link rel="stylesheet" href="~/css/Create.css" />

<h1>Sửa</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KhoaId" />
            <div class="form-group">
                <label asp-for="TenKhoa" class="control-label"></label>
                <input asp-for="TenKhoa" class="form-control" />
                <span asp-validation-for="TenKhoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
        
            <div class="button-group">
                <input type="submit" value="Xác nhận" class="btn btn-primary" />
                <a asp-action="Index" class="btn back-button">Quay lại</a>
            </div>
        </form>
    </div>
</div>


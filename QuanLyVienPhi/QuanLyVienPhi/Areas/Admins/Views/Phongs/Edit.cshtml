@model QuanLyVienPhi.Models.Phong

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admins/Views/Shared/Admin.cshtml";
}

<link rel="stylesheet" href="~/css/Create.css" />

<h1>Sửa</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PhongId" />
            <div class="form-group">
                <label asp-for="SoPhong" class="control-label"></label>
                <input asp-for="SoPhong" class="form-control" />
                <span asp-validation-for="SoPhong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TienPhongNgay" class="control-label"></label>
                <input asp-for="TienPhongNgay" class="form-control" />
                <span asp-validation-for="TienPhongNgay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KhoaId" class="control-label"></label>
                <select asp-for="KhoaId" class="form-control" asp-items="ViewBag.KhoaId"></select>
                <span asp-validation-for="KhoaId" class="text-danger"></span>
            </div>
            <div class="button-group">
                <input type="submit" value="Xác nhận" class="btn btn-primary" />
                <a asp-action="Index" class="btn back-button">Quay lại</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

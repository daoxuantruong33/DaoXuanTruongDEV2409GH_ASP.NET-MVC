@model IEnumerable<QuanLyVienPhi.Models.Thuoc>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admins/Views/Shared/Admin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenThuoc)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.GiaTien)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenThuoc)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.GiaTien)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ThuocId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ThuocId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ThuocId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

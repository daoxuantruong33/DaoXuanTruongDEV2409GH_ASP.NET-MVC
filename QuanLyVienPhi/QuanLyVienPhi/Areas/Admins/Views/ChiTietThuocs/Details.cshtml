@model QuanLyVienPhi.Models.ChiTietThuoc

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admins/Views/Shared/Admin.cshtml";
}
<link rel="stylesheet" href="~/css/Details.css" />

<h1>Chi Tiết</h1>
<hr />
<div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BenhNhan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BenhNhan.HoTen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Thuoc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thuoc.TenThuoc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SoLuong)
        </dt>

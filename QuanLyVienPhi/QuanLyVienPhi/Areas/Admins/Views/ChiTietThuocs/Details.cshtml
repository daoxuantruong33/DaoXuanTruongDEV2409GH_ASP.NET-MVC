            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TienThuoc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TienThuoc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
    </dl>
    <div class="button-group">
        <a asp-action="Edit" asp-route-id="@Model?.ChiTietThuocId" class="btn btn-primary">Sửa</a>
        <a asp-action="Index" class="back-button">Quay lại</a>
    </div>
</div>

